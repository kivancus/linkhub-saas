{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended"
  ],
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "ignorePatterns": [".eslintrc.json", "dist/**/*", "frontend/**/*"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "off"
  }
}